<style type="text/css">
  #size-a4-print * {font-family: "Comic Sans MS", "cursive"!important;}
  table.with-border td, table.with-border th{
    border: solid 2px #000;
    padding: 2px;
    font-family: "cursive";
    font-weight: 700;
  }
