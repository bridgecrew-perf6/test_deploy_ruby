<div class="page-header">
  <h3>Carrier: <%= @carrier.name %></h3>
</div>

<% if !notice.nil? %>
<p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>

<div class="btn-group ">
  <a href="<%= edit_carrier_path(@carrier) %>" class="btn btn-small" title="Edit: <%= @carrier.name %>"><i class="icon-edit-sign"></i></a>
  <a href="<%= carriers_path %>" class="btn btn-small" title="Back to Lists"><i class="icon-reply"></i></a>
</div>
<div class="details">
  <div>
    <strong>COMPANY NAME:</strong>
    <span><%= @carrier.name %>&nbsp;</span>
  </div>
  <div>
    <strong>REFERENCE:</strong>
    <span><%= @carrier.reference %>&nbsp;</span>
  </div>
  <div>
    <strong>CREDIT TERMS:</strong>
    <span><%= @carrier.credit_term %> Days</span>
  </div>
  <div>
    <strong>ADDRESS:</strong>
    <pre><%= @carrier.full_address %>&nbsp;</pre>
  </div>
  <div class="details" style="margin-top: 10px">
    <% @carrier.custom_fields.where(field_key: "ADDRESS").each do |cf| %>
      <%= render 'shared/custom_field', :cf => cf %>
    <% end %>
    <% @carrier.custom_fields.where(field_key: "PHONE").each do |cf| %>
      <%= render 'shared/custom_field', :cf => cf %>
    <% end %>
    <% @carrier.custom_fields.where(field_key: "FAX").each do |cf| %>
      <%= render 'shared/custom_field', :cf => cf %>
    <% end %>
    <% @carrier.custom_fields.where(field_key: "EMAIL").each do |cf| %>
      <%= render 'shared/custom_field', :cf => cf %>
    <% end %>
    <% @carrier.custom_fields.where(field_key: "PIC").each do |cf| %>
      <%= render 'shared/custom_field', :cf => cf %>
    <% end %>
    <% @carrier.custom_fields.where(field_key: "URL").each do |cf| %>
      <%= render 'shared/custom_field', :cf => cf %>
    <% end %>
    <% @carrier.custom_fields.where(field_key: "CUSTOM").each do |cf| %>
      <%= render 'shared/custom_field', :cf => cf %>
    <% end %>
  </div>
  <div>
    <strong>NOTE :</strong>
    <pre><%= @carrier.notes %>&nbsp;</pre>
  </div>
</div>
<div class="clearfix"></div>