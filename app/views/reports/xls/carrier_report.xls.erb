<%
  head = []
  head.push "Company\t"
  head.push "Address\t"
  head.push "Phone\t"
  head.push "Fax\t"
  head.push "Email\t"
  head.push "PIC\t"
%>
<%= head.join("").html_safe %>
<% @results.each do |carrier| %>
  <%
    body = []
    body.push "#{carrier.name}\t"
    body.push "#{carrier.full_address.squish}\t"
    body.push "#{carrier.custom_attribute('phone')}\t"
    body.push "#{carrier.custom_attribute('fax')}\t"
    body.push "#{carrier.custom_attribute('email')}\t"
    body.push "#{carrier.custom_attribute('pic')}\t"
  %>
<%= body.join("").html_safe %>
<% end %>