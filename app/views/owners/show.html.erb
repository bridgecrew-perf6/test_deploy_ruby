<div class="page-header">
  <h3>Owner: <%= @owner.name %></h3>
</div>
<% if !notice.nil? %>
<p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>
<div class="btn-group" style="margin-bottom: 20px">
  <a href="<%= edit_owner_path(@owner) %>" class="btn btn-small" title="Edit: <%= @owner.name %>"><i class="icon-edit-sign"></i></a>
  <a href="<%= owners_path %>" class="btn btn-small" title="Back to Lists"><i class="icon-reply"></i></a>
</div>
<div class="details">
  <div>
    <strong>OWNER:</strong>
    <span><%= @owner.name %>&nbsp;</span>
  </div>
  <div>
    <strong>REFERENCE:</strong>
    <span><%= @owner.reference %>&nbsp;</span>
  </div>
  <div class="details" style="margin-top: 10px">
    <% @owner.custom_fields.where(field_key: "ADDRESS").each do |cf| %>
      <%= render 'shared/custom_field', :cf => cf %>
    <% end %>
    <% @owner.custom_fields.where(field_key: "PHONE").each do |cf| %>
      <%= render 'shared/custom_field', :cf => cf %>
    <% end %>
    <% @owner.custom_fields.where(field_key: "FAX").each do |cf| %>
      <%= render 'shared/custom_field', :cf => cf %>
    <% end %>
    <% @owner.custom_fields.where(field_key: "EMAIL").each do |cf| %>
      <%= render 'shared/custom_field', :cf => cf %>
    <% end %>
    <% @owner.custom_fields.where(field_key: "PIC").each do |cf| %>
      <%= render 'shared/custom_field', :cf => cf %>
    <% end %>
    <% @owner.custom_fields.where(field_key: "URL").each do |cf| %>
      <%= render 'shared/custom_field', :cf => cf %>
    <% end %>
    <% @owner.custom_fields.where(field_key: "CUSTOM").each do |cf| %>
      <%= render 'shared/custom_field', :cf => cf %>
    <% end %>
  </div>
  <div>
    <strong>NOTE :</strong>
    <pre><%= @owner.notes %>&nbsp;</pre>
  </div>
</div>