<div class="page-header">
  <h3>List Banks</h3>
</div>

<%= link_to 'Add New Bank', new_bank_path, :class => "btn btn-primary" %><br/><br/>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Bank name</th>
      <th>Bank address</th>
      <th>Acc name</th>
      <th>Acc no</th>
      <th>Swift code</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @banks.each do |bank| %>
      <tr>
        <td><%= bank.bank_name %></td>
        <td><pre class="free"><%= bank.bank_address %></pre></td>
        <td><%= bank.acc_name %></td>
        <td><%= bank.acc_no %></td>
        <td><%= bank.swift_code %></td>
        <td><%= link_to 'Show', bank %></td>
        <td><%= link_to 'Edit', edit_bank_path(bank) %></td>
        <td><%= link_to 'Destroy', bank, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
