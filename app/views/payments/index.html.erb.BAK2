<%# will_paginate @collection, renderer: BootstrapPagination::Rails %>

<table class="table table-striped table-bordered" id="payments">
  <thead>
  <tr>
    <th width="10%">Actions</th>
    <th>Payment NO</th>
    <th>IBL REF</th>
    <th>Booking No</th>
    <th>Shipper</th>
    <th>Destination</th>
    <th>Volume</th>
    <th>Carrier</th>
    <th>Amount</th>
    <th>Notes</th>
    <th>ETD Vessel</th>
    <th>Payment Date</th>
    <th>Status</th>
  </tr>
  </thead>
  <tbody>
  <%= render @payments %>
  </tbody>
</table>

