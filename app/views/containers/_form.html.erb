<%= form_for(@container, html: {class: "form-horizontal"}) do |f| %>
  <% if @container.errors.any? %>
  <div class="alert alert-error">
      <ul class="unstyled">
      <% @container.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
  </div>
  <% end %>

  <div class="control-group">
    <label for="" class="control-label">Container Type</label>
    <div class="controls">
      <%= f.text_field :container_type %>
    </div>
  </div>
  <div class="control-group">
    <label for="" class="control-label">Length (mm)</label>
    <div class="controls">
      <%= f.text_field :length %>
    </div>
  </div>
  <div class="control-group">
    <label for="" class="control-label">Width (mm)</label>
    <div class="controls">
      <%= f.text_field :width %>
    </div>
  </div>
  <div class="control-group">
    <label for="" class="control-label">Height (mm)</label>
    <div class="controls">
      <%= f.text_field :height %>
    </div>
  </div>
  <div class="control-group">
    <label for="" class="control-label">Capacity (cbm)</label>
    <div class="controls">
      <%= f.text_field :capacity %>
    </div>
  </div>
  <div class="control-group">
    <label for="" class="control-label">Load (kg)</label>
    <div class="controls">
      <%= f.text_field :load %>
    </div>
  </div>
  <div class="control-group">
    <label for="" class="control-label">Container Weight (kg)</label>
    <div class="controls">
      <%= f.text_field :container_weight %>
    </div>
  </div>
  <div class="control-group">
    <label for="" class="control-label">Max Gross Weight (kg)</label>
    <div class="controls">
      <%= f.text_field :max_gross_weight %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <button type="submit" class="btn btn-primary"><i class="icon-save"></i> Save</button>
      <a href="<%= containers_path %>" class="btn"><i class="icon-reply"></i> Back</a>
    </div>
  </div>
<% end %>
