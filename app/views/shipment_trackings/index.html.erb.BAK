<script type="text/javascript">
  $(".adjust").click(function (e) {
    $(this).prev().toggleClass("collapsed");
    if ($(this).prev().hasClass("collapsed")) {
      $(this).text("- More")
    } else {
      $(this).text("+ Less")
    }
    e.preventDefault();
  });
</script>
