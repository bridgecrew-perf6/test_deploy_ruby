<%= form_for(@bank, html: { class: "form-horizontal"}) do |f| %>
<% if @bank.errors.any? %>
<div class="alert alert-error">
  <ul class="unstyled">
    <% @bank.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="control-group">
  <label class="control-label">Bank Name</label>
  <div class="controls">
    <%= f.text_field :bank_name %>
  </div>
</div>
<div class="control-group">
  <label class="control-label">Bank Address</label>
  <div class="controls">
    <%= f.text_area :bank_address, class: "span5", style: "height: 100px" %>
  </div>
</div>
<div class="control-group">
  <label class="control-label">Account Name</label>
  <div class="controls">
    <%= f.text_field :acc_name %>
  </div>
</div>
<div class="control-group">
  <label class="control-label">Account Number</label>
  <div class="controls">
    <%= f.text_field :acc_no %>
  </div>
</div>
<div class="control-group">
  <label class="control-label">Swift Code</label>
  <div class="controls">
    <%= f.text_field :swift_code %>
  </div>
</div>
<div class="control-group">
  <div class="controls">
    <button type="submit" class="btn btn-primary"><i class="icon-save"></i> Save</button>
    <a href="<%= banks_path %>" class="btn"><i class="icon-reply"></i> Back</a>
  </div>
</div>
<% end %>
